{
  "manifest_version": 3,
  "name": "VIN Decoder - Free Instant Vehicle Information",
  "version": "1.1",
  "description": "VIN Decoder - Decode any Vehicle Identification Number and reveal detailed vehicle data. Instantly.",
  "permissions": ["contextMenus"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": ["axios.min.js"],
      "matches": ["https://vpic.nhtsa.dot.gov/*"]
    }
  ]
}
