{
  "manifest_version": 3,
  "name": "VIN Decoder",
  "version": "1.0",
  "description": "Decode Vehicle Identification Numbers",
  "permissions": ["scripting", "contextMenus", "activeTab", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": ["*://*/*"],
  "content_scripts": [
    {
      "js": ["axios.min.js"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ]
}
