{
  "manifest_version": 3,
  "name": "VIN Decoder",
  "version": "1.0",
  "description": "Decode Vehicle Identification Numbers",
  "permissions": ["scripting", "contextMenus", "activeTab", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": ["*://*/*"],
  "content_scripts": [
    {
      "js": ["axios.min.js"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ]
}
